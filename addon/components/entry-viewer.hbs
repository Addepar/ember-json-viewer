<li class="entry">
  {{#if this.isToggleable}}
    <span class="key is-toggleable" {{on "click" this.toggleExpanded}} data-test-toggle={{@path}}>
      <span class="key-expansion-state">
        {{#if this.isExpanded}}
          {{{this.expandedIcon}}}
        {{else}}
          {{{this.collapsedIcon}}}
        {{/if}}
      </span>
      <span data-path={{@path}}>
        {{! In order for copy/paste to work, the quoted key (e.g. '"foo": ')
          must be a single text node
        }}
        {{this.quotedKey}}
      </span>
    </span>
  {{else}}
    <span class="key" data-path={{@path}}>
      {{! In order for copy/paste to work, the quoted key (e.g. '"foo": ')
        must be a single text node
      }}
      {{this.quotedKey}}
    </span>
  {{/if}}
  <ValueViewer
    @value={{@value}}
    @showSummary={{not this.isExpanded}}
    @depth={{inc @depth}}
    @displayOptions={{@displayOptions}}
    @path={{@path}}
  />
  {{#unless this.isLast}}
    {{! In order for copy/paste to work, there cannot be extra whitespace around the delimiter }}
    <span class="entry-delimiter" data-path={{concat @path "@" ","}}>,</span>
  {{/unless}}
</li>
